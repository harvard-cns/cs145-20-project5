{
  "program": "p4src/link_failure.p4",
  "switch": "simple_switch",
  "compiler": "p4c",
  "options": "--target bmv2 --arch v1model --std p4-16",
  "switch_cli": "simple_switch_CLI",
  "cli": true,
  "pcap_dump": true,
  "enable_log": true,
  "exec_scripts": [
    {
      "cmd": "sudo python link_failure_controller.py t1 cpu &",
      "reboot_run": true
    },
    {
      "cmd": "sudo python link_failure_controller.py a1 cpu &",
      "reboot_run" : true
    },
    {
      "cmd": "sudo python link_failure_controller.py t2 cpu &",
      "reboot_run" : true
    },
    { 
      "cmd" : "sudo python link_failure_controller.py a2 cpu &",
      "reboot_run" : true
    }
  ],
  "topo_module": {
    "file_path": "",
    "module_name": "p4utils.mininetlib.apptopo",
    "object_name": "AppTopoStrategies"
  },
  "controller_module": null,
  "topodb_module": {
    "file_path": "",
    "module_name": "p4utils.utils.topology",
    "object_name": "Topology"
  },
  "mininet_module": {
    "file_path": "",
    "module_name": "p4utils.mininetlib.p4net",
    "object_name": "P4Mininet"
  },
  "topology": {
    "assignment_strategy": "l2",
    "auto_arp_tables": false,
    "links": [["h1", "t1", {"bw": 10}], ["h2", "t1", {"bw": 10}], ["h3", "t2", {"bw": 10}], ["h4", "t2", {"bw": 10}], ["t1", "a1", {"bw": 10}], ["t1", "a2", {"bw": 10}], ["t2", "a1", {"bw": 10}], ["t2", "a2", {"bw": 10}]],
    "hosts": {
	"h1": {},
	"h2": {},
	"h3": {},
	"h4": {}
  },
    "switches": {
	"t1": {"cpu_port": true},
	"t2": {"cpu_port": true},
	"a1": {"cpu_port": true},
	"a2": {"cpu_port": true}
    }
  }
}
